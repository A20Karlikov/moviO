<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.io.moviO.moviesList.MoviesListFragment"
        android:label="MoviesListFragment">
        <action
            android:id="@+id/action_list_to_details"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@animator/nav_default_pop_enter_anim"
            app:exitAnim="@animator/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.io.moviO.movieDetails.MovieDetailsFragment"
        android:label="MovieDetailsFragment">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
</navigation>